# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/
MONGO_DB=attendance_system

# AI Provider Configuration
# Uncomment dan isi yang kamu gunakan

# OpenAI (Official API)
# OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxx

# OpenAI Proxy (Elice or Custom Proxy)
# Uncomment untuk menggunakan Elice atau proxy lainnya
OPENAI_BASE_URL=https://mlapi.run/abc-1234-xyz/v1
OPENAI_API_KEY=your-elice-api-key-here
OPENAI_MODEL=openai/gpt-4o

# Anthropic (Claude)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI (Gemini)
# GOOGLE_API_KEY=your_google_api_key_here

# Groq (Fast LLaMA inference)
# GROQ_API_KEY=your_groq_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# CORS Settings
CORS_ORIGINS=http://localhost:5173
